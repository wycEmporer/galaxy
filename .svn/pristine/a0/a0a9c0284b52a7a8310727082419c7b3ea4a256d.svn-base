<template>
  <div class="trip_list"
    v-infinite-scroll="loadMore"
    infinite-scroll-disabled="isMoreLoading"
    :infinite-scroll-immediate-check="true"
    infinite-scroll-distance="10"
    >
    <template v-for="(item, index) in triplist">
      <div class="list_child" :key="index">
        <TripInfoPart :flightInfo="item" @click.native="searchTripDetail(item)"></TripInfoPart>
        <div >
          <button class="list_btn">Pay Now</button>
        </div>
      </div>
    </template>
    <div class="loading-box" v-show="isLoading">
      <mt-spinner type="fading-circle" :size='30'></mt-spinner>
      <span class="loading-more-txt">loading ...</span>
    </div>
  </div>
</template>
<script>
import { Indicator, Spinner } from 'mint-ui';
import { mapState } from 'vuex';
export default {
  components: {
    'mt-spinner': Spinner,
    TripInfoPart: () => import('@/components/TripInfoPart')
  },
  data () {
    return {
      isLoading: false,
      isMoreLoading: true,
      loadInfo: {
        pageNum: 1,
        pageSize: 5,
        totalPage: 3
      }
    };
  },
  created () {
    this.loadMore();
  },
  computed: {
    ...mapState({
      triplist: state => state.MyTripList.triplistArray
    })
  },
  methods: {
    loadMore () {
      // Indicator.open({
      //   spinnerType: 'fading-circle'
      // });
      this.loadInfo.pageNum += 1;
      this.isMoreLoading = true;
      this.isLoading = true;
      // console.log(this.triplist.length);
      if (this.loadInfo.pageNum > this.loadInfo.totalPage) {
        // Indicator.close();
        this.isLoading = false;
        return false;
      }
      setTimeout(() => {
        this.searchOrder();
      }, 1000);
    },
    searchOrder () {
      let arr = [
        { id: 5, fn: '321', dt: '12h:05m', at: '12h05m', ds: 'DOM', as: 'SIN', stop: 1, img: require('@/pages/flights/images/IX.png') },
        { id: 6, fn: '321', dt: '12h:05m', at: '12h05m', ds: 'DOM', as: 'SIN', stop: 1, img: require('@/pages/flights/images/IX.png') },
        { id: 7, fn: '321', dt: '12h:05m', at: '12h05m', ds: 'DOM', as: 'SIN', stop: 1, img: require('@/pages/flights/images/IX.png') }
      ];
      this.triplist.push(...arr);
      Indicator.close();
    },
    searchTripDetail (info) {
      let data = {
        info: info,
        show: true
      };
      this.$store.commit('saveTripDetail', data);
    }
  }
};
</script>
